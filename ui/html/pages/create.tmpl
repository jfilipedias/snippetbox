{{define  "title"}}Create a new snippet{{end}}

{{define "main"}}
	<form action="/snippet/create" method="POST">
		<div>
			<label for="title">Title:</label>
			<input type="text" name="title" id="title">
		</div>
		<div>
			<label for="content">Content:</label>
			<textarea name="content" id="content"></textarea>
		</div>
		<div>
			<label>Delete in:</label>
			<input type="radio" name="expires" id="year" value="365" checked>
			<label for="year">One Year</label>
			<input type="radio" name="expires" id="week" value="7"> 
			<label for="week">One Week</label>
			<input type="radio" name="expires" id="day" value="1">
			<label for="day">One Day</label>
		</div>
		<div>
			<input type="submit" value="Publish snippet">
		</div>
	</form>
{{end}}
